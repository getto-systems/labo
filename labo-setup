#!/bin/bash

labo_setup_main(){
  labo_setup_dotfiles
  labo_setup_config
}
labo_setup_dotfiles(){
  local root
  local path

  root=/home/$LABO_USER

  cd $root
  if [ -d .dotfiles ]; then
    for path in $(ls -a1 .dotfiles); do
      case "$path" in
        .|..)
          ;;
        *)
          if [ ! -L $path ]; then
            if [ -e $path ]; then
              echo "$path exists. not linked"
            else
              echo "ln -s .dotfiles/$path"
              ln -s .dotfiles/$path
            fi
          fi
          ;;
      esac
    done
  fi
}
labo_setup_config(){
  local rc
  rc=$root/.config/rc

  if [ -x "$rc" ]; then
    $rc
  fi
}

labo_setup_main
